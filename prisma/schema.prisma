generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id          Int       @id @default(autoincrement())
  createdDate DateTime  @default(now())
  email       String    @unique
  password    String
  product     Product[]
  followings  User[]    @relation("followRelation")
  followers   User[]    @relation("followRelation")
  fav         Fav[]
  profileImg  String?
  nickname    String?   @unique
  keywords    HashTag[]
  look        Look[]
}

model Product {
  id          Int       @id @default(autoincrement())
  title       String
  price       Int
  createdDate DateTime  @default(now())
  description String    @db.MediumText
  imgurl      Img[]
  rental      Boolean   @default(false)
  category    String
  style       String?
  brand       String
  view        Int       @default(0)
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  look        Look?     @relation(fields: [lookId], references: [id])
  lookId      Int?
  hashTag     HashTag[]
  fav         Fav[]
}

model HashTag {
  id      Int       @id @default(autoincrement())
  tag     String    @unique
  product Product[]
  look    Look[]
  user    User?     @relation(fields: [userId], references: [id])
  userId  Int?
}

model Img {
  id        Int      @id @default(autoincrement())
  img       String   @db.LongText
  Product   Product? @relation(fields: [productId], references: [id])
  productId Int?
  Look      Look?    @relation(fields: [lookId], references: [id])
  lookId    Int?
}

model Look {
  id          Int       @id @default(autoincrement())
  description String?   @db.MediumText
  createdDate DateTime  @default(now())
  imgurl      Img[]
  product     Product[]
  hashTag     HashTag[]
  likes       Int       @default(0)
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
}

model Fav {
  id        Int     @id @default(autoincrement())
  fav       Product @relation(fields: [productId], references: [id])
  productId Int
  user      User?   @relation(fields: [userId], references: [id])
  userId    Int?
}
